{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Mon Panier</h1>
                <p class="mt-2 text-sm text-gray-600">
                    {% if items is not empty %}
                        {{ items|length }} article(s) dans votre panier
                    {% endif %}
                </p>
            </div>

            {% if items is empty %}
                <!-- Panier vide -->
                <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                    <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                    <h2 class="mt-6 text-xl font-semibold text-gray-900">Votre panier est vide</h2>
                    <p class="mt-2 text-gray-600">Commencez vos achats dès maintenant !</p>
                    <a href="{{ path('app_home') }}" class="mt-6 inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        Continuer mes achats
                    </a>
                </div>
            {% else %}
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Liste des articles -->
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                            <div class="divide-y divide-gray-200">
                                {% for item in items %}
                                    <div class="p-6 hover:bg-gray-50 transition-colors">
                                        <div class="flex items-center space-x-4">
                                            <!-- Image produit -->
                                            <div class="flex-shrink-0 w-24 h-24 bg-gray-200 rounded-lg overflow-hidden">
                                                <img src="{{ item.product.image }}" alt="{{ item.product.name }}" class="w-full h-full object-cover">
                                            </div>

                                            <!-- Détails produit -->
                                            <div class="flex-1 min-w-0">
                                                <h3 class="text-lg font-semibold text-gray-900 truncate">
                                                    {{ item.product.name }}
                                                </h3>
                                                <p class="mt-1 text-sm text-gray-500">
                                                    Prix unitaire: {{ item.product.price }} DT
                                                </p>
                                                <p class="mt-1 text-xs text-gray-400">
                                                    Catégorie: {{ item.product.category }} | Marque: {{ item.product.brand }}
                                                </p>
                                                <div class="mt-2 flex items-center space-x-4">
                                                    <div class="flex items-center space-x-2">
                                                        <label class="text-sm text-gray-600">Quantité:</label>
                                                        <span class="px-3 py-1 bg-gray-100 rounded-md text-sm font-medium">
                                                        {{ item.quantity }}
                                                    </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Prix et actions -->
                                            <div class="flex flex-col items-end space-y-3">
                                                <p class="text-xl font-bold text-gray-900">
                                                    {{ item.subtotal }} DT
                                                </p>
                                                <a href="{{ path('cart_remove', {id: item.product.id}) }}"
                                                   class="inline-flex items-center text-sm text-red-600 hover:text-red-800 font-medium transition-colors">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                    Supprimer
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Actions du panier -->
                        <div class="mt-6 flex justify-between">
                            <a href="{{ path('app_home') }}"
                               class="inline-flex items-center px-4 py-2 text-gray-700 hover:text-gray-900 font-medium transition-colors">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                                Continuer mes achats
                            </a>
                            <a href="{{ path('cart_clear') }}"
                               class="inline-flex items-center px-4 py-2 text-red-600 hover:text-red-800 font-medium transition-colors">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Vider le panier
                            </a>
                        </div>
                    </div>

                    <!-- Résumé de la commande -->
                    <div class="lg:col-span-1">
                        <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
                            <h2 class="text-lg font-semibold text-gray-900 mb-4">Résumé de la commande</h2>

                            <div class="space-y-3 mb-6">
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-600">Sous-total</span>
                                    <span class="font-medium text-gray-900">{{ total }} DT</span>
                                </div>
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-600">Livraison</span>
                                    <span class="font-medium text-gray-900">Gratuite</span>
                                </div>
                                <div class="border-t border-gray-200 pt-3">
                                    <div class="flex justify-between">
                                        <span class="text-base font-semibold text-gray-900">Total</span>
                                        <span class="text-xl font-bold text-gray-900">{{ total }} DT</span>
                                    </div>
                                </div>
                            </div>

                            <button type="button"
                                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition-colors shadow-sm">
                                Procéder au paiement
                            </button>

                            <div class="mt-4 text-center">
                                <p class="text-xs text-gray-500">
                                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                    Paiement 100% sécurisé
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
