{% extends 'base.html.twig' %}

{% block title %}Choisir une Commande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Choisir une Commande</h1>

        {% if commandes is empty %}
            <div class="alert alert-warning">
                Aucune commande disponible. Créez d'abord une commande.
            </div>
        {% else %}
            <div class="row">
                {% for commande in commandes %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Commande #{{ commande.id }}</h5>
                            </div>
                            <div class="card-body">
                                <p>
                                    <strong>Date:</strong> {{ commande.dateCommande|date('d/m/Y H:i') }}<br>
                                    <strong>Client:</strong> {{ commande.user ? commande.user.email : 'Non assigné' }}<br>
                                    <strong>Montant:</strong>
                                    <span class="fw-bold">
                                        {{ commande.montantTotal|number_format(2, ',', ' ') }} DT
                                    </span><br>
                                    <strong>Statut:</strong>
                                    <span class="badge bg-{{ commande.status == 'livrée' ? 'success' :
                                    commande.status == 'annulée' ? 'danger' :
                                    'warning' }}">
                                        {{ commande.status }}
                                    </span>
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('app_ligne_commande_par_commande', {id: commande.id}) }}"
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-list"></i> Voir les lignes
                                </a>
                                <a href="{{ path('app_ligne_commande_new', {commandeId: commande.id}) }}"
                                   class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Ajouter une ligne
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour aux commandes
            </a>
        </div>
    </div>
{% endblock %}
