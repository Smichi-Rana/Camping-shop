{% extends 'base.html.twig' %}

{% block title %}Nouvelle Ligne de Commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="fas fa-plus-circle"></i> Nouvelle Ligne de Commande
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {# Affiche automatiquement tous les champs du formulaire #}
                        {{ form_widget(form) }}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_ligne_commande_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
