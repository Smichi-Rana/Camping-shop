{% extends 'base.html.twig' %}

{% block title %}Ligne de Commande #{{ ligneCommande.id }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ligne de Commande #{{ ligneCommande.id }}</h1>

        <div class="card mt-3">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>ID</th>
                        <td>{{ ligneCommande.id }}</td>
                    </tr>
                    <tr>
                        <th>Produit</th>
                        <td>
                            {% if ligneCommande.product %}
                                {{ ligneCommande.product.nom }}
                            {% else %}
                                <span class="text-danger">Produit supprimé</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Quantité</th>
                        <td>{{ ligneCommande.quantite }}</td>
                    </tr>
                    <tr>
                        <th>Prix Unitaire</th>
                        <td>{{ ligneCommande.prixUnitaire|number_format(2, ',', ' ') }} DT</td>
                    </tr>
                    <tr>
                        <th>Total</th>
                        <td class="fw-bold text-success">
                            {{ (ligneCommande.quantite * ligneCommande.prixUnitaire)|number_format(2, ',', ' ') }} DT
                        </td>
                    </tr>
                    <tr>
                        <th>Commande</th>
                        <td>
                            {% if ligneCommande.commande %}
                                Commande #{{ ligneCommande.commande.id }}
                            {% endif %}
                        </td>
                    </tr>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_ligne_commande_index') }}" class="btn btn-secondary">
                        Retour à la liste
                    </a>
                    <a href="{{ path('app_ligne_commande_edit', {id: ligneCommande.id}) }}"
                       class="btn btn-warning">
                        Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
