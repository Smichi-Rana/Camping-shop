{% extends 'base.html.twig' %}

{% block title %}Liste des Factures{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-file-invoice"></i> Liste des Factures
                </h1>
                <a href="{{ path('app_facture_new') }}" class="btn btn-light">
                    <i class="fas fa-plus"></i> Nouvelle Facture
                </a>
            </div>
            <div class="card-body">
                {% if factures is empty %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Aucune facture trouvée.
                    </div>
                {% else %}
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Numéro</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Commande</th>
                            <th>Client</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for facture in factures %}
                            <tr>
                                <td>{{ facture.id }}</td>
                                <td>
                                    <strong>{{ facture.numCommande }}</strong>
                                </td>
                                <td>
                                    {{ facture.date ? facture.date|date('d/m/Y') : '-' }}
                                </td>
                                <td>
                                    <span class="text-success fw-bold">
                                        {{ facture.total }} €
                                    </span>
                                </td>
                                <td>
                                    {% if facture.commande %}
                                        <a href="{{ path('app_commande_show', {'id': facture.commande.id}) }}"
                                           class="text-decoration-none">
                                            Commande #{{ facture.commande.id }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Non liée</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if facture.commande and facture.commande.user %}
                                        {{ facture.commande.user.prenom }} {{ facture.commande.user.nom }}
                                        <br>
                                        <small class="text-muted">{{ facture.commande.user.email }}</small>
                                    {% elseif facture.user %}
                                        {{ facture.user.prenom }} {{ facture.user.nom }}
                                        <br>
                                        <small class="text-muted">{{ facture.user.email }}</small>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_facture_show', {'id': facture.id}) }}"
                                           class="btn btn-sm btn-info"
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_facture_edit', {'id': facture.id}) }}"
                                           class="btn btn-sm btn-warning"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
