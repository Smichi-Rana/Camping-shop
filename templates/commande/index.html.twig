{% extends 'base.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}
    <div class="content-card">
        <div class="page-header">
            <h1 class="page-title">
                <i class="bi bi-card-list"></i> Liste des Commandes
            </h1>
            <a href="{{ path('app_commande_new') }}" class="btn-primary-custom">
                <i class="bi bi-plus-circle"></i> Nouvelle Commande
            </a>
        </div>

        {% if commandes is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Aucune commande trouvée. <a href="{{ path('app_commande_new') }}" class="alert-link">Créer la première commande</a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Montant Total</th>
                        <th>Statut</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td><strong>#{{ commande.id }}</strong></td>
                            <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if commande %}
                                    {{ commande.user.nom }} {{ commande.user.prenom }}
                                {% else %}
                                    <span class="text-muted">Non assigné</span>
                                {% endif %}
                            </td>
                            <td><strong>{{ commande.montantTotal|number_format(2, ',', ' ') }} €</strong></td>
                            <td>
                                <span class="status-badge status-{{ commande.status|lower }}">
                                    {{ commande.status }}
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}"
                                       class="btn btn-sm btn-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}"
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_commande_delete', {'id': commande.id}) }}"
                                          style="display:inline;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Total : <strong>{{ commandes|length }}</strong> commande(s)
                </p>
            </div>
        {% endif %}
    </div>
{% endblock %}
