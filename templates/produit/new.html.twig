{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient-success text-white py-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0">
                                    <i class="fas fa-box-circle-plus me-2"></i>Ajouter un nouveau produit
                                </h4>
                                <small class="opacity-75">Remplissez tous les champs obligatoires</small>
                            </div>
                            <div class="avatar-circle bg-white text-success">
                                <i class="fas fa-plus fa-2x"></i>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

                        <div class="row g-4">
                            <!-- Nom du produit -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                    {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                    <small class="form-text text-muted">Nom descriptif du produit</small>
                                </div>
                            </div>

                            <!-- Prix -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': ' ', 'step': '0.01'}}) }}
                                    {{ form_label(form.prix, 'Prix (€)', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.prix) }}
                                    </div>
                                    <small class="form-text text-muted">Prix unitaire en euros</small>
                                </div>
                            </div>

                            <!-- Quantité -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                    {{ form_label(form.quantite, 'Quantité en stock', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.quantite) }}
                                    </div>
                                    <small class="form-text text-muted">Nombre d'unités disponibles</small>
                                </div>
                            </div>

                            <!-- Catégorie -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.categorie, {'attr': {'class': 'form-select', 'placeholder': ' '}}) }}
                                    {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.categorie) }}
                                    </div>
                                    <small class="form-text text-muted">Catégorie du produit</small>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': ' ', 'rows': 3, 'style': 'height: 120px'}}) }}
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.description) }}
                                    </div>
                                    <small class="form-text text-muted">Décrivez le produit en détail</small>
                                </div>
                            </div>

                            <!-- Photo -->
                            <div class="col-12">
                                <div class="card border-dashed">
                                    <div class="card-body text-center p-5">
                                        <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                        <h5 class="mb-3">Télécharger une photo</h5>
                                        <p class="text-muted mb-4">Formats acceptés: JPG, PNG, GIF (Max 2MB)</p>

                                        <div class="mb-3">
                                            {{ form_widget(form.photo, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.photo) }}
                                            </div>
                                        </div>

                                        <div id="imagePreview" class="mt-3"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                            <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Enregistrer le produit
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border-radius: 15px;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .avatar-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .border-dashed {
            border: 2px dashed #dee2e6 !important;
            border-radius: 10px;
            transition: border-color 0.3s;
        }

        .border-dashed:hover {
            border-color: #0d6efd !important;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #198754;
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Preview d'image
            const photoInput = document.querySelector('#{{ form.photo.vars.id }}');
            const previewContainer = document.getElementById('imagePreview');

            if (photoInput) {
                photoInput.addEventListener('change', function(e) {
                    previewContainer.innerHTML = '';

                    if (this.files && this.files[0]) {
                        const file = this.files[0];

                        // Vérification de la taille (2MB max)
                        if (file.size > 2 * 1024 * 1024) {
                            alert('Le fichier est trop volumineux (max 2MB)');
                            this.value = '';
                            return;
                        }

                        const reader = new FileReader();

                        reader.onload = function(e) {
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'img-thumbnail mt-2';
                            img.style.maxWidth = '200px';
                            img.style.maxHeight = '200px';

                            previewContainer.appendChild(img);
                        }

                        reader.readAsDataURL(file);
                    }
                });
            }

            // Validation Bootstrap
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
{% endblock %}
