{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">
                        <i class="fas fa-boxes me-2"></i>Gestion des Produits
                    </h1>
                    <a href="{{ path('app_produit_new') }}" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>Nouveau Produit
                    </a>
                </div>
                <hr class="my-3">
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-search"></i>
                                </span>
                                    <input type="text" name="search" class="form-control form-control-lg"
                                           placeholder="Rechercher un produit par nom, description..."
                                           value="{{ searchTerm }}">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-search me-2"></i>Rechercher
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">
                            <i class="fas fa-chart-bar me-2"></i>Statistiques
                        </h5>
                        <div class="d-flex justify-content-around">
                            <div>
                                <h3 class="text-primary">{{ articles|length }}</h3>
                                <small class="text-muted">Produits</small>
                            </div>
                            <div>
                                <h3 class="text-success">
                                    {{ articles|reduce((total, article) => total + article.prix, 0) }} €
                                </h3>
                                <small class="text-muted">Valeur totale</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if articles|length > 0 %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="card product-card shadow-sm h-100">
                            <div class="card-img-wrapper">
                                {% if article.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ article.photo) }}"
                                         class="card-img-top product-image"
                                         alt="{{ article.nom }}"
                                         onerror="this.src='https://via.placeholder.com/300x200?text=Image+Non+Disponible'">
                                {% else %}
                                    <div class="no-image bg-secondary text-white d-flex align-items-center justify-content-center">
                                        <i class="fas fa-camera fa-3x"></i>
                                    </div>
                                {% endif %}
                                <div class="product-badges">
                                    {% if article.quantite > 10 %}
                                        <span class="badge bg-success">En stock</span>
                                    {% elseif article.quantite > 0 %}
                                        <span class="badge bg-warning">Stock faible</span>
                                    {% else %}
                                        <span class="badge bg-danger">Rupture</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title text-truncate" title="{{ article.nom }}">
                                    {{ article.nom }}
                                </h5>
                                <p class="card-text text-muted small mb-3">
                                    {{ article.description|slice(0, 80) }}...
                                </p>

                                <div class="product-details">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-bold">
                                <i class="fas fa-tag me-1"></i>Prix:
                            </span>
                                        <span class="h5 text-success mb-0">{{ article.prix }} €</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-bold">
                                <i class="fas fa-box me-1"></i>Stock:
                            </span>
                                        <span class="h6 mb-0">{{ article.quantite }} unités</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">
                                <i class="fas fa-layer-group me-1"></i>Catégorie:
                            </span>
                                        <span class="badge bg-info">{{ article.categorie.nom ?? 'Non catégorisé' }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-white border-top-0">
                                <div class="btn-group w-100" role="group">
                                    <a href="{{ path('app_produit_show', {'id': article.id}) }}"
                                       class="btn btn-outline-info btn-sm" title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_produit_edit', {'id': article.id}) }}"
                                       class="btn btn-outline-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_produit_delete', {'id': article.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-box-open fa-4x text-muted mb-4"></i>
                            <h3 class="text-muted">Aucun produit trouvé</h3>
                            <p class="text-muted mb-4">
                                {% if searchTerm %}
                                    Aucun résultat pour "{{ searchTerm }}"
                                {% else %}
                                    Commencez par ajouter votre premier produit
                                {% endif %}
                            </p>
                            <a href="{{ path('app_produit_new') }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus-circle me-2"></i>Ajouter un produit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .product-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

        .product-image {
            height: 200px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .card-img-wrapper {
            position: relative;
            overflow: hidden;
        }

        .no-image {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-badges {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .btn-group .btn {
            border-radius: 0.375rem !important;
            margin: 0 2px;
        }

        @media (max-width: 768px) {
            .btn-group .btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.875rem;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation des cartes au chargement
            const cards = document.querySelectorAll('.product-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('animate__animated', 'animate__fadeInUp');
            });
        });
    </script>
{% endblock %}
