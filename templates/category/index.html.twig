                                                        <label for="name{{ category.id }}" class="form-label">Nom *</label>
                                                        <input type="text" 
                                                               class="form-control" 
                                                               id="name{{ category.id }}" 
                                                               name="name" 
                                                               value="{{ category.name }}" 
                                                               required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="emoji{{ category.id }}" class="form-label">Emoji</label>
                                                        <input type="text" 
