<div class="products-grid" id="productsGrid">
    {% for product in products %}
    <div class="product-card" data-name="{{ product.name }}" data-price="{{ product.price }}">
        <div class="product-image">
            {% if product.image %}
                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" loading="lazy">
            {% else %}
                <img src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?w=500&h=400&fit=crop" alt="{{ product.name }}" loading="lazy">
            {% endif %}
            <div class="product-badge">{{ category.name }}</div>
        </div>
        
        <div class="product-info">
            <div class="product-category-tag">{{ category.name }}</div>
            <h3 class="product-title">{{ product.name }}</h3>
            
            {% if product.description %}
                <p class="product-description">{{ product.description }}</p>
            {% endif %}
            
            <div class="product-footer">
                <div class="product-price">
                    {{ product.price|number_format(2, ',', ' ') }} DT
                </div>
                
                <div class="product-actions">
                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn-view">
                        üëÅÔ∏è Voir
                    </a>
                    <button class="btn-cart" onclick="addToCart({{ product.id }})" title="Ajouter au panier">
                        üõí
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
<!-- √âtat vide -->
<div class="empty-state">
    <div class="empty-icon">üì¶</div>
    <h3>Aucun produit dans cette cat√©gorie</h3>
    <p>Les produits de la cat√©gorie "{{ category.name }}" seront bient√¥t disponibles. Revenez plus tard !</p>
    <a href="{{ path('app_product_index') }}" class="btn-primary">
        üõçÔ∏è Voir tous les produits
    </a>
</div>
{% endif %}

<script>
// Fonction de tri des produits
function sortProducts(sortType) {
    const grid = document.getElementById('productsGrid');
    const cards = Array.from(grid.getElementsByClassName('product-card'));
    
    // Retirer la classe active de tous les boutons
    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
    
    // Ajouter la classe active au bouton cliqu√©
    event.target.classList.add('active');
    
    cards.sort((a, b) => {
        switch(sortType) {
            case 'price-asc':
                return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
            case 'price-desc':
                return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
            case 'name':
                return a.dataset.name.localeCompare(b.dataset.name);
            case 'popular':
            default:
                return 0;
        }
    });
    
    // R√©organiser les cartes
    cards.forEach(card => grid.appendChild(card));
}

// Fonction d'ajout au panier
function addToCart(productId) {
    fetch(`/cart/add/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        // Animation de confirmation
        const button = event.target;
        button.innerHTML = '‚úÖ';
        button.style.background = '#48bb78';
        button.style.borderColor = '#48bb78';
        button.style.color = 'white';
        
        setTimeout(() => {
            button.innerHTML = 'üõí';
            button.style.background = 'white';
            button.style.borderColor = '#667eea';
            button.style.color = '#667eea';
        }, 1500);
        
        // Mettre √† jour le compteur du panier
        updateCartCount();
    })
    .catch(error => {
        console.error('Erreur:', error);
    });
}

function updateCartCount() {
    // Cette fonction sera impl√©ment√©e avec votre syst√®me de panier
    console.log('Cart updated');
}
</script>

