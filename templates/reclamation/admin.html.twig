{% extends 'base.html.twig' %}

{% block title %}Admin — Réclamations{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3 mb-0">Gestion des réclamations</h1>
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>

        <!-- Filter / search -->
        <div class="row mb-3 g-2">
            <div class="col-md-4">
                <form method="get" class="d-flex">
                    <select name="status" class="form-select me-2" onchange="this.form.submit()">
                        <option value="">Tous les statuts</option>
                        <option value="En attente" {{ current_status == 'En attente' ? 'selected' : '' }}>En attente</option>
                        <option value="En cours" {{ current_status == 'En cours' ? 'selected' : '' }}>En cours</option>
                        <option value="Traité" {{ current_status == 'Traité' ? 'selected' : '' }}>Traité</option>
                        <option value="Résolu" {{ current_status == 'Résolu' ? 'selected' : '' }}>Résolu</option>
                    </select>
                    <input type="search" name="q" value="{{ app.request.query.get('q') }}" class="form-control" placeholder="Rechercher message / user">
                </form>
            </div>

            <div class="col-md-8 text-end">
                <small class="text-muted">Total : {{ reclamations|length }}</small>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th style="width:80px">#</th>
                    <th>Message</th>
                    <th style="width:160px">Utilisateur</th>
                    <th style="width:110px">Commande</th>
                    <th style="width:120px">Produit</th>
                    <th style="width:150px">Date</th>
                    <th style="width:110px">Statut</th>
                    <th style="width:220px">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for r in reclamations %}
                    <tr>
                        <td class="fw-bold">#{{ r.id }}</td>

                        {# message truncated with tooltip #}
                        <td>
            <span
                data-bs-toggle="tooltip"
                data-bs-placement="top"
                title="{{ r.message }}">
              {{ r.message|length > 80 ? r.message|slice(0,80) ~ '…' : r.message }}
            </span>
                        </td>

                        <td>
                            <div class="small">{{ r.user.email }}</div>
                            <div class="text-muted small">id: {{ r.user.id }}</div>
                        </td>

                        <td class="text-center">
                            {% if r.commande %}
                                <a href="{{ path('app_commande_show', {id: r.commande.id}) }}" class="badge bg-info text-dark text-decoration-none">#{{ r.commande.id }}</a>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>

                        <td>
                            {% if r.product %}
                                <div>{{ r.product.name }}</div>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>

                        <td>
                            {{ r.date ? r.date|date('Y-m-d H:i') : '-' }}
                        </td>

                        <td>
                            {# status badge colors #}
                            {% set s = r.statut|lower %}
                            {% if s == 'en attente' %}
                                <span class="badge bg-warning text-dark">En attente</span>
                            {% elseif s == 'en cours' %}
                                <span class="badge bg-primary">En cours</span>
                            {% elseif s == 'traite' or s == 'traité' %}
                                <span class="badge bg-info text-dark">Traité</span>
                            {% elseif s == 'resolu' or s == 'résolu' %}
                                <span class="badge bg-success">Résolu</span>
                            {% elseif s == 'rejeté' %}
                                <span class="badge bg-danger">Rejeté</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ r.statut }}</span>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('app_reclamation_show', {id: r.id}) }}" class="btn btn-sm btn-outline-info me-1"><i class="bi bi-eye"></i> Voir</a>
                            <a href="{{ path('app_reclamation_edit', {id: r.id}) }}" class="btn btn-sm btn-outline-warning me-1"><i class="bi bi-pencil"></i> Éditer</a>

                            {# quick actions only visible to admin #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_reclamation_traiter', {id: r.id}) }}" class="btn btn-sm btn-outline-primary me-1">Traiter</a>
                                <a href="{{ path('app_reclamation_resoudre', {id: r.id}) }}" class="btn btn-sm btn-success me-1">Résolu</a>

                                <form method="post" action="{{ path('app_reclamation_delete', {id: r.id}) }}" style="display:inline" onsubmit="return confirm('Supprimer cette réclamation ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ r.id) }}">
                                    <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Aucune réclamation trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# initialize tooltips #}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) })
        });
    </script>
{% endblock %}
