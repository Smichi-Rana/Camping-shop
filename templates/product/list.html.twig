{% extends 'base.html.twig' %}

{% block title %}Nos Produits - CampingShop{% endblock %}

{% block body %}
<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active">Tous les produits</li>
        </ol>
    </nav>

    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">üèïÔ∏è Nos Produits</h1>
            <p class="lead text-muted">D√©couvrez notre s√©lection de mat√©riel de camping</p>
            
            <form method="get" action="{{ path('app_product_index') }}" class="mt-4">
                <div class="input-group input-group-lg shadow-sm">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ app.request.query.get('search', '') }}">
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <strong>{{ products|length }} produit(s) disponible(s)</strong>
        </div>
    </div>

    {% if products|length > 0 %}
        <div class="row g-4">
            {% for product in products %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div style="height: 250px; overflow: hidden;">
                            {% if product.image %}
                                <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top h-100 w-100 object-fit-cover">
                            {% else %}
                                <img src="{{ asset('images/no-image.jpg') }}" class="card-img-top h-100 w-100 object-fit-cover">
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if product.category %}
                                <span class="badge bg-secondary mb-2">{{ product.category.name }}</span>
                            {% endif %}
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text text-muted">{{ product.description|slice(0, 50) }}...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 text-primary">{{ product.price }} DT</span>
                                <div class="btn-group">
                                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                                    <a href="#" class="btn btn-primary btn-sm">Acheter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">Aucun produit trouv√©.</div>
    {% endif %}
</div>
{% endblock %}