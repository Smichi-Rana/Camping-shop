{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Liste des produits (Admin)</h1>

    <div class="card p-4 mb-5 shadow-sm">
        <h2>{{ editing is defined and editing ? 'Modifier' : 'Ajouter' }} un produit</h2>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-success mt-3">Enregistrer</button>
        {{ form_end(form) }}
    </div>

    <h2>Produits en base</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} DT</td>
                <td>{{ product.stock }}</td>
                <td>
                    {% if product.image %}
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" width="50">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}