{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-tachometer-alt"></i> Dashboard Administrateur
                </h1>
                <p class="text-muted">Bienvenue, {{ app.user.prenom }} {{ app.user.nom }}</p>
            </div>
        </div>

        <div class="row">
            <!-- Carte Commandes -->
            <div class="col-md-3 mb-4">
                <div class="card bg-primary text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1">Commandes</h6>
                                <h2 class="mb-0">0</h2>
                            </div>
                            <div class="text-white-50">
                                <i class="fas fa-shopping-cart fa-3x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top border-white-50">
                        <a href="{{ path('app_commande_index') }}" class="text-white text-decoration-none">
                            Voir les commandes <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Carte Factures -->
            <div class="col-md-3 mb-4">
                <div class="card bg-success text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1">Factures</h6>
                                <h2 class="mb-0">0</h2>
                            </div>
                            <div class="text-white-50">
                                <i class="fas fa-file-invoice fa-3x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top border-white-50">
                        <a href="{{ path('app_facture_index') }}" class="text-white text-decoration-none">
                            Voir les factures <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Carte Utilisateurs -->
            <div class="col-md-3 mb-4">
                <div class="card bg-warning text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1">Utilisateurs</h6>
                                <h2 class="mb-0">0</h2>
                            </div>
                            <div class="text-white-50">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top border-white-50">
                        <span class="text-white">Gérer les utilisateurs</span>
                    </div>
                </div>
            </div>

            <!-- Carte Statistiques -->
            <div class="col-md-3 mb-4">
                <div class="card bg-info text-white shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1">Statistiques</h6>
                                <h2 class="mb-0">€0</h2>
                            </div>
                            <div class="text-white-50">
                                <i class="fas fa-chart-line fa-3x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top border-white-50">
                        <a href="{{ path('app_statistiques') }}" class="text-white text-decoration-none">
                            Voir les stats <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Accès rapides -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-bolt"></i> Accès rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('app_commande_index') }}" class="btn btn-outline-primary btn-lg w-100">
                                    <i class="fas fa-shopping-cart"></i><br>
                                    Gérer les commandes
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('app_facture_index') }}" class="btn btn-outline-success btn-lg w-100">
                                    <i class="fas fa-file-invoice"></i><br>
                                    Gérer les factures
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('app_statistiques') }}" class="btn btn-outline-info btn-lg w-100">
                                    <i class="fas fa-chart-bar"></i><br>
                                    Voir les statistiques
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
