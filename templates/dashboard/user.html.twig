{% extends 'base.html.twig' %}

{% block title %}Mon Espace{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="bi bi-person-circle"></i> Mon Espace Client
                </h1>
                <p class="text-muted">Bienvenue, {{ app.user.prenom }} {{ app.user.nom }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-cart3"></i> Mes Commandes</h5>
                    </div>
                    <div class="card-body">
                        <p>Consultez l'historique de vos commandes</p>
                        <a href="{{ path('app_mes_commandes') }}" class="btn btn-primary">
                            Voir mes commandes
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Mes Factures</h5>
                    </div>
                    <div class="card-body">
                        <p>Consultez vos factures</p>
                        <a href="{{ path('app_facture_index') }}" class="btn btn-success">
                            Voir mes factures
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <h5><i class="bi bi-box-arrow-right"></i> Déconnexion</h5>
                        <p class="text-muted">Vous souhaitez vous déconnecter ?</p>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Se déconnecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
