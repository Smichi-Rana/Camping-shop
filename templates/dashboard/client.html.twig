{% extends 'base.html.twig' %}

{% block title %}Mon Espace Client{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">
                    <i class="fas fa-user-circle"></i> Bienvenue, {{ app.user.email }}
                </h1>
                <hr>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="row mb-5">
            <div class="col-md-12">
                <h3 class="mb-3">Actions rapides</h3>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Nouvelle Commande</h5>
                        <p class="card-text">Passer une nouvelle commande</p>
                        <a href="{{ path('app_commande_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-list fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Mes Commandes</h5>
                        <p class="card-text">Voir toutes mes commandes</p>
                        <a href="{{ path('app_mes_commandes') }}" class="btn btn-success">
                            <i class="fas fa-eye"></i> Consulter
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-file-invoice-dollar fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Mes Factures</h5>
                        <p class="card-text">Consulter mes factures</p>
                        <a href="{{ path('app_mes_factures') }}" class="btn btn-warning">
                            <i class="fas fa-receipt"></i> Voir
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="row mb-5">
            <div class="col-md-12">
                <h3 class="mb-3">Mes Statistiques</h3>
            </div>
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <a href="{{ path('app_statistiques') }}" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-chart-line"></i> Voir mes statistiques détaillées
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations utiles -->
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <h5><i class="fas fa-info-circle"></i> Informations</h5>
                    <ul class="mb-0">
                        <li>Vos commandes sont traitées sous 24-48h</li>
                        <li>Vous recevrez une notification par email lors de la validation</li>
                        <li>Les factures sont générées automatiquement après validation</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
