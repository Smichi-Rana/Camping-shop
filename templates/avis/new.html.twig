{% extends 'base.html.twig' %}

{% block title %}Laisser un Avis{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-star"></i> Laisser un Avis
                        </h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-4">
                            Votre avis est important pour nous et aide les autres clients à faire leur choix.
                        </p>

                        {{ form_start(form) }}

                        <div class="mb-4">
                            {{ form_label(form.note, 'Votre note') }}
                            {{ form_widget(form.note, {'attr': {'class': 'form-select form-select-lg'}}) }}
                            {{ form_errors(form.note) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.produitService) }}
                            {{ form_widget(form.produitService) }}
                            {{ form_errors(form.produitService) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.commentaire) }}
                            {{ form_widget(form.commentaire) }}
                            {{ form_errors(form.commentaire) }}
                            <small class="text-muted">Minimum 10 caractères</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nomUtilisateur) }}
                                {{ form_widget(form.nomUtilisateur) }}
                                {{ form_errors(form.nomUtilisateur) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.emailUtilisateur) }}
                                {{ form_widget(form.emailUtilisateur) }}
                                {{ form_errors(form.emailUtilisateur) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                {{ form_widget(form.estRecommande) }}
                                {{ form_label(form.estRecommande) }}
                            </div>
                            {{ form_errors(form.estRecommande) }}
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Votre avis sera publié après validation par notre équipe.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Publier l'avis
                            </button>
                            <a href="{{ path('app_avis_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
